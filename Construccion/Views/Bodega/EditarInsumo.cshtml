@model Construccion.Models.Insumos

@{
    ViewData["Title"] = "Editar Insumo";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="EditarInsumo" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="IdInsumos" />
                        <input type="hidden" asp-for="IdBodega" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Insumo</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del insumo" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">Tipo de Insumo</label>
                            <input asp-for="Tipo" class="form-control" placeholder="Ingrese el tipo de insumo" required />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label">Cantidad</label>
                            <input asp-for="Cantidad" class="form-control" placeholder="Ingrese la cantidad" required />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-primary me-2">Guardar</button>
                            <a href="@Url.Action("ListaInsumos", "Bodega", new { idBodega = Model.IdBodega })" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


