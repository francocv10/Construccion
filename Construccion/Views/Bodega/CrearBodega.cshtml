@model Construccion.Models.Bodega

@{
    ViewData["Title"] = "Crear Bodega";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="CrearBodega" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="NombreBodega" class="form-label">Nombre de la Bodega</label>
                            <input asp-for="NombreBodega" class="form-control" placeholder="Ingrese el nombre de la bodega" required />
                            <span asp-validation-for="NombreBodega" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-primary me-2">Guardar Bodega</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
