@model Construccion.Models.Insumos

@{
    ViewData["Title"] = "Agregar Insumo";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Agregar Insumo</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    <form asp-action="AgregarInsumo" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="IdBodega" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Insumo</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del insumo" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label">Cantidad</label>
                            <input asp-for="Cantidad" class="form-control" placeholder="Ingrese la cantidad" required />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">Tipo de Insumo</label>
                            <select asp-for="Tipo" class="form-select" required>
                                <option value="">Seleccione el tipo de insumo</option>
                                <option value="Herramienta">Herramienta</option>
                                <option value="Material">Material</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-primary me-2">Guardar Insumo</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


