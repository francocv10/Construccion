@model Construccion.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Eliminar Usuario</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="text-center">Confirmación de Eliminación</h3>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Nombre Completo:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

                        <dt class="col-sm-4">Identificador:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Identificador)</dd>

                        <dt class="col-sm-4">Rol:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdRolNavigation!.NombreRol)</dd>

                        <dt class="col-sm-4">Contraseña:</dt>
                        <dd class="col-sm-8">
                            <input type="password" id="passwordInput" class="form-control-plaintext" value="@Model.Clave" readonly />
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="showPasswordCheck">
                                <label class="form-check-label" for="showPasswordCheck">Mostrar contraseña</label>
                            </div>
                        </dd>
                    </dl>

                    <p class="text-center">¿Está seguro de que desea eliminar este usuario?</p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdUsuario" />
                        <div class="text-center mt-4">
                            <button type="submit" value="Eliminar" class="btn btn-danger me-2">Eliminar</button>
                            <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('showPasswordCheck').addEventListener('change', function () {
            var passwordInput = document.getElementById('passwordInput');
            var type = this.checked ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
        });
    </script>
}

