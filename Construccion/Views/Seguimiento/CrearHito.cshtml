@model Construccion.Models.Hito

@{
    ViewData["Title"] = "Crear Hito";
}

<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
    <div class="card shadow" style="width: 50%; max-width: 500px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Crear Hito</h2>
            <form asp-action="CrearHito" method="post" novalidate>
                <input type="hidden" name="IdObra" value="@ViewBag.IdObra" />

                <div class="mb-3">
                    <label asp-for="NombreHito" class="form-label">Nombre del Hito:</label>
                    <input asp-for="NombreHito" class="form-control" />
                    <span asp-validation-for="NombreHito" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdPartida" class="form-label">Seleccionar Partida:</label>
                    <select asp-for="IdPartida" class="form-control" asp-items="ViewBag.Partidas">
                        <option value="">Seleccione una partida</option>
                    </select>
                    <span asp-validation-for="IdPartida" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary me-2">Crear Hito</button>
                    <a asp-action="Hitos" asp-route-idObra="@ViewBag.IdObra" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}